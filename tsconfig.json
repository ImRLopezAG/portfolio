{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsxImportSource": "react",
    "baseUrl": ".",
    "jsx": "preserve",
    "strictNullChecks": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@shared/*": [
        "./src/lib/*"
      ],
			"@ui/*": ["./src/components/ui/*"],
			"@hooks/*": ["./src/hooks/*"],
    }
  }
}