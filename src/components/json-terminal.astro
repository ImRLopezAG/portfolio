---
interface Props {
  content: Record<string, any>;
  fileName: string;
  className?: string;
}

const { content, fileName, className = "" } = Astro.props;

const formatJsonValue = (value: any): string => {
  if (typeof value === "string") {
    return `"${value}"`;
  }
  if (typeof value === "number" || typeof value === "boolean") {
    return value.toString();
  }
  if (Array.isArray(value)) {
    return `[${value.map((item) => formatJsonValue(item)).join(", ")}]`;
  }
  if (typeof value === "object" && value !== null) {
    const entries = Object.entries(value);
    const formatted = entries
      .map(([key, val]) => `  "${key}": ${formatJsonValue(val)}`)
      .join(",\n");
    return `{\n${formatted}\n}`;
  }
  return "null";
};

const jsonEntries = Object.entries(content);
---

<div
  class={`bg-gray-900 rounded-lg shadow-2xl overflow-hidden font-mono text-xs sm:text-sm ${className}`}
>
  <!-- Terminal Header -->
  <div class="bg-gray-800 px-4 py-2 flex items-center gap-2">
    <div class="flex gap-2">
      <div class="w-3 h-3 bg-red-500 rounded-full"></div>
      <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
      <div class="w-3 h-3 bg-green-500 rounded-full"></div>
    </div>
    <span class="text-gray-300 text-xs ml-2">{fileName}</span>
  </div>

  <div class="p-2 sm:p-4 text-green-400 leading-relaxed">
    <div class="terminal-line command-line text-gray-500">
      $ cat {fileName}
    </div>

    <div class="json-content">
      <div
        class="terminal-line opening-brace text-white"
        style="animation-delay: 0.1s"
      >
        {"{"}
      </div>

      <div class="json-entries ml-4 w-fit">
        {
          jsonEntries.map(([key, value], index) => (
            <p
              class="terminal-line"
              style={`animation-delay: ${0.15 + index * 0.2}s`}
            >
              <span class="text-blue-400"> "{key}"</span>
              <span class="text-white">: </span>
              {Array.isArray(value) ? (
                <span class="inline-block">
                  <span class="text-white">[</span>
                  {value.map((item, itemIndex) => (
                    <span class="inline-block">
                      <span class="text-yellow-300">"{item}"</span>
                      {itemIndex < value.length - 1 && (
                        <span class="text-white">, </span>
                      )}
                    </span>
                  ))}
                  <span class="text-white">]</span>
                </span>
              ) : (
                <span class="text-yellow-300 break-all">"{value}"</span>
              )}
              {index < jsonEntries.length - 1 && (
                <span class="text-white">,</span>
              )}
            </p>
          ))
        }
      </div>
    </div>

    <div
      class="terminal-line closing-brace text-white"
      style={`animation-delay: ${0.15 + jsonEntries.length * 0.2}s`}
    >
      {"}"}
      <span class="text-green-400 ml-1 animate-[pulse_1s_ease-in-out_infinite]"
        >|</span
      >
    </div>
  </div>
</div>

<style>
  @reference "tailwindcss";
  .terminal-line {
    @apply block overflow-hidden mb-1 max-w-fit whitespace-nowrap text-balance;
    animation: type-line 0.5s steps(40, end) forwards;
  }

  .command-line {
    animation-delay: 0s;
  }

  .opening-brace {
    animation-delay: 0.1s;
  }

  @keyframes type-line {
    0% {
      width: 0;
    }
    100% {
      width: 100%;
    }
  }

  /* Mobile optimization */
  @media (max-width: 768px) {
    .terminal-line {
      animation: type-line 0.4s steps(30, end) forwards;
    }
  }

  /* Handle overflow on very small screens */
  @media (max-width: 480px) {
    .terminal-line {
      @apply text-xs;
      animation: type-line 0.4s steps(20, end) forwards;
    }
  }
</style>
