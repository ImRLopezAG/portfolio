---
import { Button } from '@ui/button';
import { ScrollNext } from '@ui/scroll-next';
import { AlbumIcon, Github, Instagram, Linkedin } from 'lucide-react';
import { AnimatedSection } from './section';
import { Image } from 'astro:assets';
---

<AnimatedSection
  id='home'
  className='flex min-h-screen flex-col justify-center pt-16'
>
  <div class='grid items-center gap-8 lg:grid-cols-2'>
    <div
      class='motion-preset-slide-right-lg motion-duration-700 motion-delay-500 motion-ease-bounce space-y-6'
    >
      <div class='space-y-2'>
        <h1
          class='font-bold text-4xl tracking-tight sm:text-5xl md:text-6xl lg:text-7xl'
        >
          <span class='block'>Hi, I&apos;m</span>
          <span
            class='block bg-gradient-to-r from-primary to-purple-600 bg-clip-text text-transparent'
          >
            Angel Gabriel Lopez
          </span>
        </h1>
        <p class='text-muted-foreground text-xl'>
          Full-Stack developer with +2 years of experience & basketball player
        </p>
      </div>
      <p class='max-w-prose text-lg text-muted-foreground'>
        Results-driven software developer crafting impactful, real-world
        applications in .NET, Next.js, and Dynamics 365.
      </p>
      <div class='flex flex-wrap gap-4'>
        <Button asChild size='lg'>
          <a href='#contact'>Get in touch</a>
        </Button>
        <Button asChild variant='outline' size='lg'>
          <a href='#projects'>View projects</a>
        </Button>
      </div>
      <div class='flex gap-4'>
        <Button asChild variant='ghost' size='icon'>
          <a
            href='https://github.com/ImRLopezAG'
            target='_blank'
            rel='noreferrer'
            title='GitHub'
          >
            <Github className='h-5 w-5' />
            <span class='sr-only'>GitHub</span>
          </a>
        </Button>
        <Button asChild variant='ghost' size='icon'>
          <a
            href='https://www.aedin.com/in/angel-gabriel-lopez/'
            target='_blank'
            rel='noreferrer'
            title='aedIn'
          >
            <Linkedin className='h-5 w-5' />
            <span class='sr-only'>aedIn</span>
          </a>
        </Button>
        <Button asChild variant='ghost' size='icon'>
          <a
            href='https://www.instagram.com/angelglopez_/'
            target='_blank'
            rel='noreferrer'
            title='Instagram'
          >
            <Instagram className='h-5 w-5' />
            <span class='sr-only'>Instagram</span>
          </a>
        </Button>
        <Button asChild variant='ghost' size='icon'>
          <a
            href='/blog'
            title='Visit my blog'
            class='rounded-full bg-muted'
          >
            <AlbumIcon className='h-5 w-5' />
            <span class='sr-only'>Blog</span>
          </a>
        </Button>
      </div>
    </div>
    <div
      class='motion-translate-y-in-50 relative flex aspect-square items-center justify-center rounded-full bg-gradient-to-br from-primary/20 to-purple-600/20'
    >
      <div
        class='absolute inset-4 flex items-center justify-center overflow-hidden rounded-full bg-muted'
      >
        <Image
          src='/me.webp'
          alt='Angel Gabriel Lopez'
          class='h-full w-full object-cover'
          loading='eager'
          width={400}
          height={400}
        />
      </div>
    </div>
  </div>
  <div class='mt-16 flex justify-center'>
    <ScrollNext elementId='about' client:visible />
  </div>
</AnimatedSection>
