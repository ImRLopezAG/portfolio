---
import { Card, CardContent, CardHeader, CardTitle } from '@ui/card';
interface Props {
  title: string;
  company: string;
  startDate: string;
  endDate?: string;
  description: string;
  responsibilities: string[];
  isEducation?: boolean;
  type?: string;
  value?: string;
}
const {
  title,
  company,
  startDate,
  endDate,
  description,
  responsibilities,
  isEducation = false,
  type = '',
  value = '',
} = Astro.props;
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
};
---

<Card>
  <CardHeader className='pb-2'>
    <div class='flex items-start justify-between'>
      <CardTitle>{title}</CardTitle>
      <span class='text-muted-foreground text-sm'>
        {formatDate(startDate)} -{' '}
        {endDate ? formatDate(endDate) : 'Present'}
      </span>
    </div>
    <p class='font-medium text-primary'>{company}</p>
  </CardHeader>
  <CardContent>
    {!isEducation && <p class='mb-4 text-foreground'>{description}</p>}
    {
      isEducation && (
        <div class='mb-4 flex justify-between'>
          <span class='font-medium text-sm'>{type}</span>
          <span class='text-muted-foreground text-sm'>{value}</span>
        </div>
      )
    }
    <ul class='list-inside list-disc space-y-1 text-muted-foreground text-sm'>
      {responsibilities.map((item, index) => <li>{item}</li>)}
    </ul>
  </CardContent>
</Card>
